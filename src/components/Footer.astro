---
const mobileTyresUrl = "/mobile-tyres/";
const servicesUrl = "/services/"

const mobileTyresPages = [
    {slug: "mobile-tyre-fitting", title:"Mobile Tyre Fitting"}, 
    {slug: "24-hour-mobile-tyre-fitting", title: "Emergency Mobile Tyre Fitting"},
    {slug: "mobile-caravan-tyre-fitting", title: "Mobile Caravan Tyre Fitting"},
    {slug: "puncture-repair", title: "Puncture Repair"},
    {slug: "seasonal-refit", title: "Seasonal Refit"}
    ]

const servicesPages = [
    {slug: "locking-wheel-nut-removal", title: "Locking Wheel Nut Removal"},
    {slug: "mobile-car-battery-replacement", title: "Mobile Car Battery Replacement"},
    {slug: "mobile-brake-fitting", title: "Mobile Brake Fitting"},
    {slug: "tyre-pressure-monitoring-system", title: "Tyre Pressure Monitoring System"},
    {slug: "wheel-alignment", title: "Wheel Alignment"},
    {slug: "alloygator-wheel-protection", title: "Alloygator Wheel Protection"},
]
---

<footer class="mt-auto bg-dark text-white pt-5 pb-3">
    <div class="container d-grid">
        <div class="row">
            <div class="col-12 row pb-4">
                <div
                class="col-12 col-lg-3 d-flex justify-content-center justify-content-lg-start align-items-center align-items-lg-start"
            >
                    <div>
                        <a href="/">
                            <img
                                src="/img/logos/white-logo-no-background.webp"
                                alt="Freeway Logo"
                                class="mb-4 mb-lg-2"
                                width="200" 
                                height="52"
                            />
                        </a>
                    </div>
                </div>
                <div class="col-12 col-lg-3 text-center text-lg-start">
                    <p class="fw-bold mb-0 fs-5">Mobile Tyres</p>
                    <ul class="no-bullet-points">
                        {mobileTyresPages.map(page => (
                            <li><a href={`${mobileTyresUrl}${page.slug}`}>{page.title}</a></li>
                        ))}
                    </ul>
                </div>
                <div class="col-12 col-lg-3 text-center text-lg-start">
                    <p class="fs-5 mb-0 fw-bold">Services</p>
                    <ul class="no-bullet-points">
                        {servicesPages.map(page => (
                            <li><a href={`${servicesUrl}${page.slug}`}>{page.title}</a></li>
                        ))}
                    </ul>
                </div>
                <div class="col-12 col-lg-3 text-center text-lg-start">
                    <div>
                        <p class="fw-bold mb-0 fs-5">Get In Touch</p>
                        <p class="fs-4">
                            <i class="bi bi-telephone-fill"></i>
                            <span class="fw-bold"
                                ><a href="tel:08007311260" class="social-link"
                                    >0800 7311 260</a
                                ></span
                            >
                        </p>
                    </div>
                    <div>
                        <p class="fw-bold mb-0 fs-5">Follow Us</p>
                        <div
                            class="d-flex fs-4 justify-content-center justify-content-lg-start"
                        >
                            <p>
                                <a
                                    href="https://www.facebook.com/dorsetmobiletyres"
                                    target="_blank"
                                    class="social-link"
                                    ><i class="bi bi-facebook" aria-hidden="true"></i
                                ><span class="d-none">Facebook page</span></a>
                            </p>
                            <p>
                                <a
                                    href="https://www.youtube.com/channel/UCqDgLASKb7vnOSo4t_bdV1Q"
                                    target="_blank"
                                    class="social-link"
                                    ><i class="bi mx-3 bi-youtube" aria-hidden="true"></i
                                ><span class="d-none">YouTube page</span></a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="col-12 text-muted text-small">
                <ul class="d-flex flex-column align-items-center flex-lg-row justify-content-center no-bullet-points">
                    <li class="mx-3"><a href="/terms-and-conditions">Terms & Conditions</a></li>
                    <li class="mx-3"><a href="/cookie-policy">Cookie Policy</a></li>
                    <li class="mx-3"><a href="/privacy-policy">Privacy Policy</a></li>
                    <li class="mx-3"><a href="/site-map">Site Map</a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>

<style>

    footer li a {
        color: white;
        text-decoration: none;
    }

    footer li a:hover {
        color: #dc3545;
    }

    .social-link {
        color: white;
        text-decoration: none;
    }

    .social-link:hover {
        color: #dc3545;
    }

    .no-bullet-points {
        list-style: none;
        padding-left: 0px;
    }

    .service a {
        color: black;
        text-decoration: none;
    }
</style>