---
import Layout from "../layouts/Layout.astro"
import Hero from "../components/Hero.astro";
// import Testimonials from "./Testimonials.astro";
import ReviewWidget from "./ReviewWidget.astro";
import CTA from "../components/CTA.astro";
import AsideCards from "../components/AsideCards.astro";
import AsideAreas from "./AsideAreas.astro";

export interface Props {
    title: string,
    description: string,
    bgImg: string,
    heading: string,
    tagline: string,
    mainHeading: string,
}

const { title, description, bgImg, heading, tagline, mainHeading } = Astro.props;
---

<Layout title={`${title}`} description={description} noindex={false}>
    <Hero bgImg={bgImg} heading={heading} tagline={tagline}/>
    <main class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-8">
                    <h1 class="text-center text-lg-start">{mainHeading}</h1>
                    <slot />
                </div>
                <div class="col-12 col-lg-4">
                    <AsideCards />
                    <AsideAreas />
                </div>
            </div>
        </div>
    </main>
    <ReviewWidget />
    <CTA /> 
</Layout>